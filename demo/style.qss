#FHNotifierCloseButton {
    border-radius: none;
    padding: 4px;
    border: none;
    color: rgb(43, 43, 43);
    background-color: none;
}

#FHNotifierCloseButton:hover {
    background-color: rgba(47, 47, 47, 80);
    color: darkgray;
}

#FHNotifierCloseButton:pressed {
    background-color: rgba(125, 125, 125, 125);
    color: black;
}